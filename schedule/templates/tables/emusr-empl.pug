
h3.text-lg.bg-zinc-200.text-black #{emp.name} Unfavorables 

#count
    span.n= slots.count
    span unfavorable slots


table  
    tr
        th Date
        th Shift 
        th Actions 
    tbody 
        each unf in slots
            tr 
                td #{unf.workday}
                td #{unf.shift}
                td
                    .action-response
                        i.fa-duotone.fa-calendar(href='/wday/#{unf.workday.slug}/' class="m-1 text-gray-500 hover:text-blue-500" )
                        i.bg-transparent.fa-duotone.fa-pencil(class="m-1 text-gray-500 hover:text-amber-500")
                        i.fa-duotone.fa-trash(
                            class="m-1 text-gray-500 hover:text-red-500" 
                            _='on click fetch actions/clear-slot/#{unf.workday.slug}/#{unf.shift}/ with method:"POST" put result into closest .action-response end')



    